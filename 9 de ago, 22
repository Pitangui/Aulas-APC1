#include <stdio.h>

int soma (int *v1, int *v2){
    int resultado;
    resultado = *v1 + *v2;
    return (resultado);
}

int subtracao (int *v1, int *v2){
    int resultado;
    resultado = *v1 - *v2;
    return (resultado);
}

int multiplicacao (int *v1, int *v2){
    int resultado;
    resultado = (*v1) * (*v2);
    return (resultado);
}

int divisao (int *v1, int *v2){
    int resultado;
    resultado = *v1 / *v2;
    return (resultado);
}

int troca (int *v1, int *v2){
    int resultado;
    resultado=*v1;
    *v1=*v2;
    *v2=resultado;
}



main(){
    int n1,n2, operacao, resultado;
    printf("Digite um número: ");
    scanf("%d", &n1);
    printf("Digite outro número: ");
    scanf("%d", &n2);
    printf("\n1-Soma\n2-Subtração\n3-Multiplicação\n4-Divisão\n5-Trocar os números\n\nDigite a operacao que voce deseja: ");
    scanf("%d", &operacao);

switch(operacao){
    case 1:
        resultado = soma (&n1,&n2);
        printf("O resultado eh: %d", resultado);
        break;
    case 2:
        resultado = subtracao (&n1,&n2);
        printf("O resultado eh: %d", resultado);
        break;
    case 3:
        resultado = multiplicacao (&n1,&n2);
        printf("O resultado eh: %d", resultado);
        break;
    case 4:
        resultado = divisao (&n1, &n2);
        printf("O resultado eh: %d", resultado);
        break;
    case 5:
        printf("A ordem antes da troca eh: %d %d", n1,n2);
        troca(&n1,&n2);
        printf("\nA ordem depois da troca eh: %d %d", n1,n2);
        break;


    default:
    printf("Deu ruim playboy");
}
}
